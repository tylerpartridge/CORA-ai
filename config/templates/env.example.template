# CORA Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development: SQLite (default)
DATABASE_URL=sqlite:///./data/cora.db

# Production: PostgreSQL (uncomment and configure)
# DATABASE_URL=postgresql://cora_prod_user:SecurePass123!@db.coraai.tech:5432/cora_production

# =============================================================================
# SECURITY KEYS (GENERATE THESE!)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# =============================================================================
# EMAIL CONFIGURATION (SendGrid)
# =============================================================================
SENDGRID_API_KEY=your-sendgrid-api-key-here
FROM_EMAIL=noreply@coraai.tech
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587

# =============================================================================
# PAYMENT PROCESSING (Stripe)
# =============================================================================
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# CORS Configuration
ALLOWED_ORIGINS=https://coraai.tech,https://www.coraai.tech

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/cora.log
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# AI INTEGRATION (OpenAI)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# SMS NOTIFICATIONS (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_FROM_NUMBER=your-twilio-phone-number-here

# =============================================================================
# BANKING INTEGRATION (Plaid)
# =============================================================================
PLAID_CLIENT_ID=your-plaid-client-id-here
PLAID_SECRET=your-plaid-secret-here
PLAID_ENV=sandbox

# =============================================================================
# ACCOUNTING INTEGRATION (QuickBooks)
# =============================================================================
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id-here
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret-here
QUICKBOOKS_BASIC_AUTH=your-base64-encoded-credentials-here
QUICKBOOKS_ENVIRONMENT=sandbox
QUICKBOOKS_REDIRECT_URI=http://localhost:8000/api/integrations/quickbooks/callback

# QuickBooks API URLs (automatically set based on environment)
QUICKBOOKS_AUTH_URL=https://appcenter.intuit.com/connect/oauth2
QUICKBOOKS_TOKEN_URL=https://oauth.platform.intuit.com/oauth2/v1/tokens/bearer

# Sandbox URLs (default)
QUICKBOOKS_API_URL=https://sandbox-quickbooks.api.intuit.com/v3/company
QUICKBOOKS_USERINFO_URL=https://sandbox-accounts.platform.intuit.com/v1/openid_connect/userinfo

# Production URLs (uncomment for production)
# QUICKBOOKS_API_URL=https://quickbooks.api.intuit.com/v3/company
# QUICKBOOKS_USERINFO_URL=https://accounts.platform.intuit.com/v1/openid_connect/userinfo

# Optional: QuickBooks Debug & Webhooks
QUICKBOOKS_DEBUG=false
# QUICKBOOKS_WEBHOOK_SECRET=your-webhook-secret-here
# QUICKBOOKS_WEBHOOK_VERIFY_TOKEN=your-verification-token-here

# =============================================================================
# SECURITY NOTICE
# =============================================================================
# 1. All API keys above marked as "your-*-here" MUST be replaced with actual values
# 2. Never commit the actual .env file to version control
# 3. Use environment-specific values for different deployments
# 4. Rotate API keys regularly
# 5. Monitor API key usage for suspicious activity
# 6. Keep this template updated when adding new environment variables 