# CORA Production Environment Configuration
# Copy this file to .env.production and fill in your actual values
# NEVER commit the actual .env.production file to version control

# =============================================================================
# DATABASE CONFIGURATION (Production PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://cora_prod_user:YOUR_SECURE_PASSWORD@localhost:5432/cora_production
# Example: DATABASE_URL=postgresql://cora_prod_user:SecurePass123!@db.coraai.tech:5432/cora_production

# =============================================================================
# SECURITY CONFIGURATION (CRITICAL - Generate secure values)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=YOUR_64_CHAR_SECRET_KEY_HERE
JWT_SECRET_KEY=YOUR_64_CHAR_JWT_SECRET_KEY_HERE

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Configuration
PASSWORD_MIN_LENGTH=12
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# OpenAI Configuration (Required for onboarding)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Plaid Configuration (Banking integration)
PLAID_CLIENT_ID=YOUR_PLAID_CLIENT_ID
PLAID_SECRET=YOUR_PLAID_SECRET
PLAID_ENV=production

# Stripe Configuration (Payments)
STRIPE_API_KEY=YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET
STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY

# QuickBooks Configuration (Accounting)
QUICKBOOKS_CLIENT_ID=YOUR_QUICKBOOKS_CLIENT_ID
QUICKBOOKS_CLIENT_SECRET=YOUR_QUICKBOOKS_CLIENT_SECRET

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
EMAIL_API_KEY=YOUR_EMAIL_API_KEY
EMAIL_FROM=noreply@coraai.tech
EMAIL_FROM_NAME=CORA AI

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@localhost:6379/0
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
BASE_URL=https://coraai.tech
DEBUG=False
ENVIRONMENT=production

# CORS Configuration (Production)
CORS_ORIGINS=https://coraai.tech,https://www.coraai.tech
ALLOWED_HOSTS=coraai.tech,www.coraai.tech

# Rate Limiting (Production)
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
SENTRY_DSN=YOUR_SENTRY_DSN_HERE
SENTRY_ENVIRONMENT=production

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENCRYPTION_KEY=YOUR_BACKUP_ENCRYPTION_KEY
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_HOURS=24

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@coraai.tech
ADMIN_PASSWORD=YOUR_SECURE_ADMIN_PASSWORD

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_CERT_PATH=/etc/ssl/certs/coraai.tech.crt
SSL_KEY_PATH=/etc/ssl/private/coraai.tech.key

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/cora/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
WORKERS_PER_CORE=1
MAX_WORKERS=4
WEB_CONCURRENCY=4

# =============================================================================
# SECURITY HEADERS
# =============================================================================
SECURITY_HEADERS_ENABLED=True
HSTS_MAX_AGE=31536000
CSP_ENABLED=True

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_ONBOARDING_AI=True
FEATURE_PLAID_INTEGRATION=True
FEATURE_STRIPE_PAYMENTS=True
FEATURE_EMAIL_NOTIFICATIONS=True
FEATURE_BACKUP_SYSTEM=True

# =============================================================================
# TESTING (Development only - remove in production)
# =============================================================================
