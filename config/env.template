# CORA Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# SQLite (development)
# DATABASE_URL=sqlite:///./cora.db

# PostgreSQL (production)
DATABASE_URL=postgresql://username:password@localhost:5432/coradb
# Example: DATABASE_URL=postgresql://cora_user:secure_password@localhost:5432/cora_db

# Security Configuration (CRITICAL - Generate secure values)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Password Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# Plaid Configuration (Optional - for banking integration)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Stripe Configuration (Optional - for payments)
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# QuickBooks Configuration (Optional - for accounting)
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret

# Email Configuration (Optional - for notifications)
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@coraai.tech

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Application Configuration
BASE_URL=http://localhost:8000
DEBUG=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# AI Configuration (Required for onboarding)
OPENAI_API_KEY=your-openai-api-key-here

# Test Configuration (Development only)
TEST_USER_EMAIL=test@cora.com
TEST_USER_PASSWORD=TestPassword123!
LOAD_TEST_PASSWORD=testpassword123

# Admin Configuration
ADMIN_EMAIL=admin@coraai.tech
ADMIN_PASSWORD=AdminPassword123!

# Environment
ENVIRONMENT=development 