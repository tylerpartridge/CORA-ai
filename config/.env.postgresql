# PostgreSQL Configuration for CORA
# This replaces SQLite to handle concurrent users

# Database Configuration - PostgreSQL
DATABASE_URL=postgresql://cora_user:cora_password@localhost:5432/cora_db

# Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Security Keys (generate new ones for production)
SECRET_KEY=your-secret-key-here-generate-new-one
JWT_SECRET_KEY=your-jwt-secret-here-generate-new-one

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (keep your existing ones)
OPENAI_API_KEY=your-openai-api-key
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
STRIPE_API_KEY=your-stripe-api-key

# Application Settings
DEBUG=False
BASE_URL=http://localhost:8000
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (if using)
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@coraai.com