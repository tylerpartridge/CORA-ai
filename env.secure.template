# CORA Secure Environment Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./cora.db
# For production: DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# SECURITY CONFIGURATION (CRITICAL - Generate secure values)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=REPLACE_WITH_SECURE_KEY
JWT_SECRET_KEY=REPLACE_WITH_JWT_SECRET

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Configuration
PASSWORD_MIN_LENGTH=12

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================
# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=REPLACE_WITH_OPENAI_API_KEY

# Plaid Configuration (Banking integration)
PLAID_CLIENT_ID=REPLACE_WITH_PLAID_CLIENT_ID
PLAID_SECRET=REPLACE_WITH_PLAID_SECRET
PLAID_ENV=sandbox

# Stripe Configuration (Payments)
STRIPE_API_KEY=REPLACE_WITH_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=REPLACE_WITH_STRIPE_WEBHOOK_SECRET
STRIPE_PUBLISHABLE_KEY=REPLACE_WITH_STRIPE_PUBLISHABLE_KEY

# QuickBooks Configuration (Accounting)
QUICKBOOKS_CLIENT_ID=REPLACE_WITH_QUICKBOOKS_CLIENT_ID
QUICKBOOKS_CLIENT_SECRET=REPLACE_WITH_QUICKBOOKS_CLIENT_SECRET

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
EMAIL_API_KEY=REPLACE_WITH_EMAIL_API_KEY
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================
REDIS_URL=redis://:password@localhost:6379/0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
BASE_URL=http://localhost:8000
DEBUG=True
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN
LOG_LEVEL=INFO

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Set these for production deployment
# DEBUG=False
# ENVIRONMENT=production
# BASE_URL=https://yourdomain.com 